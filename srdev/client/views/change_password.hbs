<body style="background-color: #E5E5E5;">
    {{> navigation}}
    <br>
    <h1> Change Password </h1>
    <form action="/auth/change_password" method="POST"> 
        <div>
            <label for="username"> Enter Your Admin Password </label>
            <input type="password" id="oldPassword" name="oldPassword" required> 
        </div> 
        <div>
            <label for="password"> Enter New Password</label>
            <input type="password" id="newPasswordAttempt" name="newPasswordAttempt" required>
        </div>
        <div>
            <label for="password"> Retype New Password</label>
            <input type="password" id="newPasswordConfirm" name="newPasswordConfirm" required>
        </div>
        <button type="submit"> Submit </button>
    </form>
</body>