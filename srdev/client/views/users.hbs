<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
  <title> Admin </title>
  <link rel="stylesheet" type="text/css" href="/css/style.css">
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    {{> navigation}}
    <br>
    <div class="container">
        <div class="table-responsive">
        <table class="table">
        <thead>
            <tr class="table-active">
                <th scope="col" style=" padding-left: 1%; width: 20%;">USERNAME</th>
                <th scope="col" style="width: 64%;">ROLE</th>
                <th scope="col" style="width: 15%;" >BUS</th>
                <th scope="col">TEAM</th>
                <th scope="col">PASSWORD</th>
            </tr>
        </thead>
        {{#each users}}
        <tbody>
            <tr>
                <th scope="row" class="btn mb-0 btn-lg">{{ this.username }}</th>
                <td class='yur'>{{ this.role }}</td>
                <td><i class="fa fa-bus bus_2"><p>
                    {{#if this.name }}
                        {{ this.name }}
                    {{else}}
                        Bus Not Assigned
                    {{/if}}
                </p></i></td>
                <td><i class="fa fa-user team{{ this.color }} ml-3"><p>
                    {{#if this.color }}
                        {{ this.color }}
                    {{else}}
                        Team Not Assigned
                    {{/if}}
                </p></i></td>
                <td><button type="button" class="btn btn-light userButton">Change <br>Password</button></td>
            </tr>
        </tbody>
        {{/each}}
        </table>
        </div>
    </div>
</body>
</html>